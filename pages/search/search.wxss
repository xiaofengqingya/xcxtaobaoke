.banner {
    display:block;
    height:130px;
}
.slide-image{
    width:100%;
    height:130px;
}

.category{
    background:#fff;
    padding:10rpx 0;
    border-bottom:2rpx solid #eaeaea;
}

.category ul li{
    float:left;
    width:25%;
    text-align:center;
    margin:5px auto;
}
.category ul li image{
    width:100rpx;
    height:100rpx;
}
.category-name{
    display:block;
    font-size:28rpx;
}




.tab-h{
    height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;top: 0; left: 0; z-index: 99;}
.tab-item{margin:0 36rpx;display: inline-block;}
.tab-item.active{color: #ff6805;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 52rpx;background: #ff6805;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.item-ans { width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 10rpx;box-sizing: border-box; height: 130px;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 30%;height: 100%;position: relative;padding-right: 20rpx;}
.avatar .img{width: 100%;height: 100%;}
.expertInfo{width: 50%;font-size: 12px;flex-grow: 2;color: gray;line-height: 1.5em;}
.expertInfo .name{ font-size: 12px;color:#000;margin-bottom: 6px; height: 39px; overflow: hidden;   }
.expertInfo .tm{width: 10px;height: 10px;}
.expertInfo .jhj{line-height: 30px;color: #ff6805; }
.expertInfo .jhj i{ border: 1px #ff6805 solid;
padding: 1px;
}
.expertInfo .jhj text{font-size: 14px; font-weight: bold;}
.expertInfo .shul{bottom: 0px;}
.askBtn{ width: 18%;
height: 100%;text-align: center;
font-size: 12px; 
border-left: 1px dashed #ff6805; 
margin-left: 5px;
color:#ff6805; line-height: 30px;}
.askBtn .juan{font-weight: bold; font-size: 16px;margin-top: 10px;}
.askBtn .juanName{color: gray;margin-top: 10px;}
.askBtn .dianji{margin-top: 10px;}
